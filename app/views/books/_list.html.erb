<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover">
    <tr>
        <th class="header table-link"></th>
        <th class="header table-title">Title</th>
        <th class="header table-body">Opinion</th>
        <th></th>
        <th></th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(book.user_id) do %>
                    <%= image_tag book.get_image %>
                <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
            <td>
            <% if  book.favorite_by?(current_user) %>
                <%= link_to book_favorites_path(book), method: :delete do %>
                    <i class="fa-solid fa-heart"></i><%= link_to book.favorites.count %>
                <% end %>
            <% else %>
                <%= link_to book_favorites_path(book), method: :post do %>
                    <i class="fa-regular fa-heart"></i><%= link_to book.favorites.count %>
                <% end %>
            <% end %>
            </td>
            <td>コメント数:<%= book.book_comments.count %></td>
        </tr>

    <% end %>
</table>
