<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/35c57b14e8.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="f-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <span class="navbar-brand p-3"><%= link_to 'Bookers', root_path, class: 'nav-link text-light' %></span>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_path(current_user.id) do %>
                  <i class="fas fa-home nav-link text-light">Home</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path do %>
                  <i class="fas fa-users nav-link text-light">Users</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to books_path do %>
                  <i class="fas fa-book-open nav-link text-light">Books</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt nav-link text-light">Log out</i>
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to root_path do %>
                  <i class="fas fa-home nav-link text-light">Home</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to about_path do %>
                  <i class="fas fa-link nav-link text-light">About</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path do %>
                  <i class="fas fa-user-plus nav-link text-light">Sign up</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path do %>
                  <i class="fas fa-sign-in-alt nav-link text-light">Log in</i>
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
